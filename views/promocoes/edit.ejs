<h1>Editar promocoes</h1>

<form action="/promocoes/<%= promocoes.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= promocoes.nome %>" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="<%= promocoes.descricao %>" required>
    </div>
    <div class="form-group">
        <label for="preco">Preço com desconto</label>
        <input type="number" class="form-control" id="preco" name="preco" value="<%= promocoes.preco %>" required>
    </div>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="number" class="form-control" id="quantidade" name="quantidade" value="<%= promocoes.quantidade %>" required>
    </div>
    <div class="form-group">
        <label for="categoria_id">Categoria</label>
        <select class="form-control" id="categoria" name="categoria" required>
            <% categorias.forEach(function(categoria) { %>
                <option value="<%= categoria.id %>" <%= promocoes.categoria == categoria.id ? 'selected' : '' %>><%= categoria.nome %></option>
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>